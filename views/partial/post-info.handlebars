<article class="post">
<div class="title">
  <a href="/post/{{id}}" class="titlebtn">{{title}}</a>
</div>
<div class="content">
  <span>{{content}}</span>
  </div>
<div class="meta">
  by {{user.username}} on {{format_date created_at}}
  |
  <a href="/post/{{id}}" class="titlebtn">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</div>
</article>
